        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">


            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Categories</span></h5>
            <div class="bg-light p-4 mb-30">
                <form id="filter-form" method="GET" action="/products">
                    {{#each allCategories}}
                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" name="category" value="{{this}}"
                                id="cat-{{@index}}" {{#if (includes ../selectedCategories this)}}checked{{/if}}>
                            <label class="custom-control-label" for="cat-{{@index}}">
                                {{this}}
                            </label>
                        </div>
                    {{/each}}


                    <button type="submit" class="btn btn-primary mt-3">Apply</button>
                </form>
            </div>

