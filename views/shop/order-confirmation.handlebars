<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-12">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Submission Confirmation</span>
            </h5>

            <div class="bg-light p-30 mb-5">
                <!-- Thank you message -->
                <h4 class="text-success text-center mb-3">Thank you, {{order.firstName}}!</h4>
                <p class="text-center">
                    Your request has been successfully submitted. A KCI sales representative will contact you
                    shortly to review your selected items, discuss specifications, and provide pricing. Below is a
                    summary of your submission:
                </p>

                <!-- Order Summary -->

                <div class="col-12 pb-1">
                    <div class="bg-light p-30">
                        <div class="pt-2">
                            <h5 class="text-center">Request Summary</h5>
                            <div class="card">
                                <div class="card-body">
                                    {{#if order.cartItems.length}}
                                        <div class="table-responsive">
                                            <table
                                                class="table table-light table-borderless table-hover text-center mb-0">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each order.cartItems}}
                                                        <tr>
                                                            <td>{{this.title}}</td>
                                                            <td>{{this.quantity}}</td>
                                                        </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    {{else}}
                                        <p class="text-center text-muted mb-0">No items were included in this quote
                                            request.</p>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer / Shipping Information -->
                <h5 class="mt-4">Contact &amp; Shipping Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            <strong>Name:</strong> {{order.firstName}} {{order.lastName}}<br>
                            <strong>Email:</strong> {{order.email}}<br>
                            <strong>Phone:</strong> {{order.mobile}}
                            <strong>Customer Type:</strong> {{order.customerType}}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Address:</strong> <br>{{order.address1}}{{#if order.address2}},
                                {{order.address2}}{{/if}}<br>
                            {{order.city}}, {{order.state}} {{order.zip}}<br>

                        </p>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="/shop" class="btn btn-primary">Back to KCI Shop</a>
                </div>
            </div>
        </div>
    </div>
</div>