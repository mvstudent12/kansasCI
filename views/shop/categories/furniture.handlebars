            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <nav>
                        <ul class="pagination justify-content-center">
                            {{!-- Previous Button --}}
                            {{#if (gt currentPage 1)}}
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page={{subtract currentPage 1}}{{#each selectedCategories}}&category={{this}}{{/each}}">Previous</a>
                                </li>
                            {{else}}
                                <li class="page-item disabled"><span class="page-link">Previous</span></li>
                            {{/if}}

                            {{!-- Dynamic Page Links --}}
                            {{#each (paginationRange currentPage totalPages)}}
                                {{#if (eq this "...")}}
                                    <li class="page-item disabled"><span class="page-link">â€¦</span></li>
                                {{else}}
                                    <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                        <a class="page-link"
                                            href="?page={{this}}{{#each ../selectedCategories}}&category={{this}}{{/each}}">{{this}}</a>
                                    </li>
                                {{/if}}
