                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden bg-white">
                                <img class="img-fluid w-100 bg-white" src="{{firstImagePath this.images}}" alt="">
                                <div class="product-action">
                                    <a class="btn btn-outline-dark btn-square" href="#"><i
                                            class="fa fa-shopping-cart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>

                                    <a class="btn btn-outline-dark btn-square" href="/product-details/{{this._id}}"><i
                                            class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="text-center py-4">
