<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/shop">KCI Shop</a>
                <span class="breadcrumb-item active">Furniture</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">


        <!-- Category Filter -->

        <div class="col-lg-3 col-md-4">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Shop by Line</span>
            </h5>
            <div class="bg-light p-4 mb-30">
                <form id="line-filter-form" method="GET" action="/shop/furniture">
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="line" value="signature"
                            id="line-signature" {{#if (includes selectedLines "signature" )}}checked{{/if}} />
                        <label class="custom-control-label" for="line-signature">Signature Series</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="line" value="director" id="line-director"
                            {{#if (includes selectedLines "director" )}}checked{{/if}} />
                        <label class="custom-control-label" for="line-director">Director Series</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="line" value="executive"
                            id="line-executive" {{#if (includes selectedLines "executive" )}}checked{{/if}} />
                        <label class="custom-control-label" for="line-executive">Executive Series</label>
                    </div>
                </form>
            </div>

            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Shop by Type</span>
            </h5>
            <div class="bg-light p-4 mb-30">
                <form id="category-filter-form" method="GET" action="/shop/furniture">
                    <!-- Furniture Categories -->
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="category" value="Desks" id="cat-desks"
                            {{#if (includes selectedCategories "Desks" )}}checked{{/if}} />
                        <label class="custom-control-label" for="cat-desks">Desks</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="category" value="Seating"
                            id="cat-seating" {{#if (includes selectedCategories "Seating" )}}checked{{/if}} />
                        <label class="custom-control-label" for="cat-seating">Seating</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="category" value="Tables" id="cat-tables"
                            {{#if (includes selectedCategories "Tables" )}}checked{{/if}} />
                        <label class="custom-control-label" for="cat-tables">Tables</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="category" value="Storage"
                            id="cat-storage" {{#if (includes selectedCategories "Storage" )}}checked{{/if}} />
                        <label class="custom-control-label" for="cat-storage">Storage</label>
                    </div>

                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="category" value="Accessories"
                            id="cat-accessories" {{#if (includes selectedCategories "Accessories" )}}checked{{/if}} />
                        <label class="custom-control-label" for="cat-accessories">Accessories</label>
                    </div>
                </form>
            </div>
            {{#if subcategories.length}}
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Shop By Category</span>
                </h5>
                <div class="bg-light p-4 mb-30">
                    <form id="subcategory-filter-form" method="GET" action="/shop/furniture">
                        <!-- Keep category selection -->
                        {{#each selectedCategories}}
                            <input type="hidden" name="category" value="{{this}}">
                        {{/each}}

                        <!-- Render subcategories dynamically -->
                        {{#each subcategories}}
                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" name="subcategory" value="{{this}}"
                                    id="sub-{{@index}}" {{#if (includes ../selectedSubcategories
                                    this)}}checked{{/if}} />
                                <label class="custom-control-label" for="sub-{{@index}}">{{this}}</label>
                            </div>
                        {{/each}}

                        <button type="submit" class="btn btn-primary mt-3">Apply</button>
                    </form>
                </div>
            {{/if}}
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Shop by Brand</span>
            </h5>
            <div class="bg-light p-4 mb-30">
                <form id="brand-filter-form" method="GET" action="/shop/furniture">
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="brand" value="Commercial Concepts"
                            id="brand-cc" {{#if (includes selectedBrands "Commercial Concepts" )}}checked{{/if}} />
                        <label class="custom-control-label" for="brand-cc">Commercial Concepts</label>
                    </div>
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="brand" value="OEI" id="brand-oei" {{#if
                            (includes selectedBrands "OEI" )}}checked{{/if}} />
                        <label class="custom-control-label" for="brand-oei">OEI</label>
                    </div>
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="brand" value="OFD" id="brand-ofd" {{#if
                            (includes selectedBrands "OFD" )}}checked{{/if}} />
                        <label class="custom-control-label" for="brand-ofd">OFD</label>
                    </div>
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="brand" value="Bay Products" id="brand-bb"
                            {{#if (includes selectedBrands "Bay Products" )}}checked{{/if}} />
                        <label class="custom-control-label" for="brand-bb">Bay Products</label>
                    </div>
                </form>
            </div>

        </div>

        <!-- Shop Products -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                {{!-- Show message if any filter is active but no products --}}
                <div class="col-12">
                    {{#if (eq products.length 0)}}
                        {{#if (gt selectedCategories.length 0)}}
                            <p class="text-center text-danger">No products found for the selected filters.</p>
                        {{else}}
                            {{#if (gt selectedSubcategories.length 0)}}
                                <p class="text-center text-danger">No products found for the selected filters.</p>
                            {{else}}
                                {{#if (gt selectedLines.length 0)}}
                                    <p class="text-center text-danger">No products found for the selected filters.</p>
                                {{else}}
                                    {{#if (gt selectedBrands.length 0)}}
                                        <p class="text-center text-danger">No products found for the selected filters.
                                        </p>
                                    {{/if}}
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>


                {{#each products}}
                    <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden bg-white">
                                <img class="img-fluid w-100 bg-white" src="{{firstImagePath this.images}}" alt="">
                                <div class="product-action">

                                    <a class="btn btn-outline-dark btn-square"
                                        href="/shop/product-details/{{this._id}}"><i class="fa fa-search"></i></a>
                                </div>

                            </div>
                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-wrap"
                                    href="/shop/product-details/{{this._id}}">{{this.title}}</a>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>
            <!-- Pagination -->
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <nav>
                        <ul class="pagination justify-content-center">

                            {{!-- Previous Button --}}
                            {{#if (gt currentPage 1)}}
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page={{subtract currentPage 1}}{{#each selectedCategories}}&category={{urlEncode this}}{{/each}}{{#each selectedSubcategories}}&subcategory={{urlEncode this}}{{/each}}{{#each selectedLines}}&line={{urlEncode this}}{{/each}}{{#each selectedBrands}}&brand={{urlEncode this}}{{/each}}">
                                        Previous
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled"><span class="page-link">Previous</span></li>
                            {{/if}}

                            {{!-- Page Numbers --}}
                            {{#each (paginationRange currentPage totalPages)}}
                                {{#if (eq this "...")}}
                                    <li class="page-item disabled"><span class="page-link">â€¦</span></li>
                                {{else}}
                                    <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                        <a class="page-link"
                                            href="?page={{this}}{{#each ../selectedCategories}}&category={{urlEncode this}}{{/each}}{{#each ../selectedSubcategories}}&subcategory={{urlEncode this}}{{/each}}{{#each ../selectedLines}}&line={{urlEncode this}}{{/each}}{{#each ../selectedBrands}}&brand={{urlEncode this}}{{/each}}">
                                            {{this}}
                                        </a>
                                    </li>
                                {{/if}}
                            {{/each}}

                            {{!-- Next Button --}}
                            {{#if (lt currentPage totalPages)}}
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page={{add currentPage 1}}{{#each selectedCategories}}&category={{urlEncode this}}{{/each}}{{#each selectedSubcategories}}&subcategory={{urlEncode this}}{{/each}}{{#each selectedLines}}&line={{urlEncode this}}{{/each}}{{#each selectedBrands}}&brand={{urlEncode this}}{{/each}}">
                                        Next
                                    </a>
                                </li>
                            {{else}}
                                <li class="page-item disabled"><span class="page-link">Next</span></li>
                            {{/if}}

                        </ul>
                    </nav>
                </div>
            </div>


        </div>
    </div>
</div>

<script>
    // Auto-submit on category change
    document.querySelectorAll('#category-filter-form input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', () => {
            document.getElementById('category-filter-form').submit();
        });
    });

    // Auto-submit on line change
    document.querySelectorAll('#line-filter-form input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', () => {
            document.getElementById('line-filter-form').submit();
        });
    });
    // Auto-submit on brand change
    document.querySelectorAll('#brand-filter-form input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', () => {
            document.getElementById('brand-filter-form').submit();
        });
    });
</script>