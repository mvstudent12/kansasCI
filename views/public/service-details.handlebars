<main class="main">

    <div class="page-title dark-background" style="background-image: url(/img/hero-carousel/hero-carousel-1.webp);">
        <div class="container position-relative">
            <h1>{{details.category}}</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li><a href="/services">Services</a></li>
                    <li class="current">{{details.category}}</li>
                </ol>
            </nav>
        </div>
    </div>


    <section id="service-details" class="service-details section">
        <div class="container">

            <div class="row gy-4">



                <div class="col-12 col-lg-8" data-aos="fade-up" data-aos-delay="200">

                    <div class="row p-3">

                        <div class="col-4 mb-4 mb-lg-0 text-center">
                            <img src="/../img/service-details/{{details.short}}-1.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                            <img src="/../img/service-details/{{details.short}}-2.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                        </div>

                        <div class="col-4 mb-4 mb-lg-0 text-center">
                            <img src="/../img/service-details/{{details.short}}-3.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                            <img src="/../img/service-details/{{details.short}}-4.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                        </div>

                        <div class="col-4 mb-4 mb-lg-0 text-center">
                            <img src="/../img/service-details/{{details.short}}-5.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                            <img src="/../img/service-details/{{details.short}}-6.webp"
                                class="img-small shadow-1-strong rounded mb-4" />
                        </div>

                    </div>

                    <!-- Gallery -->
                    <h3>{{details.overview.title}}</h3>
                    <p>
                        {{details.overview.content}}
                    </p>
                    <ul>

                        {{#each details.keyOfferings}}

                            <li><i class="bi bi-check-circle"></i>
                                <span>{{this.description}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="col-12 col-lg-4" data-aos="fade-up" data-aos-delay="100">


                    <div class="services-list mt-3">
                        <a href="/shop/{{details.short}}" class="readmore active">Shop
                            {{details.category}}
                            <i class="bi bi-arrow-right"></i></a>
                        {{#each details.items}}
                            <p>{{this}}</p>
                        {{/each}}

                    </div>

                    <div class="card text-center" style="max-width: 400px; margin: auto;">
                        <div class="card-body">
                            <h3 class="card-title text-g">Shop Our Products</h3>
                            <p class="card-text">
                                Discover exclusive products crafted with purpose by Kansas Correctional Industries.
                                Browse
                                our catalog, explore unique designs, and support meaningful work
                            </p>

                            <a href="/shop" class="btn btn-y mt-3">Shop Now</a>
                            {{!-- <p class="mt-4">Need an account? <span class="text-y"><a href="/">Register Here.</a></span></p> --}}
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </section>
</main>