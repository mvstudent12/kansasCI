{{!-- Toast --}}

{{#if success_msg}}
    <div class="text-capitalize" id="toaster" data-msg="{{success_msg}}" data-type="success"></div>
{{/if}}

{{#if error_msg}}
    <div class="text-capitalize" id="toaster" data-msg="{{error_msg}}" data-type="error"></div>
{{/if}}


<div class="content-wrapper">
    <div class="content">
        <!-- Top Statistics -->
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card card-default">
                    <div class="d-flex p-5">
                        <div class="icon-md bg-secondary rounded-circle mr-3">
                            <i class="mdi mdi-account-tag"></i>
                        </div>
                        <div class="text-left">
                            <span class="h2 d-block">{{customerCount}}</span>
                            <p>Customers</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-default">
                    <div class="d-flex p-5">
                        <div class="icon-md bg-success rounded-circle mr-3">
                            <i class="mdi mdi-table-edit"></i>
                        </div>
                        <div class="text-left">
                            <span class="h2 d-block">{{orders.length}}</span>
                            <p>Orders</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-default">
                    <div class="d-flex p-5">
                        <div class="icon-md bg-primary rounded-circle mr-3">
                            <i class="mdi mdi-shopping-outline"></i>
                        </div>
                        <div class="text-left">
                            <span class="h2 d-block">{{productCount}}</span>
                            <p>Products</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-default">
                    <div class="d-flex p-5">
                        <div class="icon-md bg-info rounded-circle mr-3">
                            <i class="mdi mdi-account-group"></i>
                        </div>
                        <div class="text-left">
                            <span class="h2 d-block">{{salesContacts.length}}</span>
                            <p>Members</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h2>Open Orders</h2>
                    </div>
                    <div class="card-body">
                        <table id="productsTable" class="table table-hover table-product" style="width:100%">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Phone</th>
                                    <th>City</th>
                                    <th>Status</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                    <tr>
                                        <td>{{add @index 1}}</td>
                                        <td>{{customer.firstName}} {{customer.lastName}}</td>
                                        <td>{{formatDate createdAt}}</td>
                                        <td>{{customer.mobile}}</td>
                                        <td>{{customer.city}}</td>
                                        <td>{{status}}</td>
                                        <td>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle icon-burger-mini" href="#" role="button"
                                                    id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                                    aria-expanded="false">
                                                </a>

                                                <div class="dropdown-menu dropdown-menu-right"
                                                    aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="/admin/viewOrder/{{_id}}">View</a>
                                                    <a href="#" class="dropdown-item text-danger" data-toggle="modal"
                                                        data-target="#completeModal-{{_id}}">
                                                        Mark as Complete
                                                    </a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <div class="modal fade" id="completeModal-{{_id}}" tabindex="-1" role="dialog"
                                        aria-labelledby="completeModalLabel-{{_id}}" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="completeModalLabel-{{_id}}">Confirm
                                                        Completion</h5>
                                                    <button type="button" class="close text-white" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to mark this order as completed? This will
                                                    hide the order from your dashboard.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary btn-pill"
                                                        data-dismiss="modal">Cancel</button>
                                                    <a href="#" class="btn btn-danger btn-pill">Confirm</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
