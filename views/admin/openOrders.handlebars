<div class="content-wrapper">

    <div class="content">

        <div class="row">
            <div class="col text-center mb-5">
                <a href="/admin/orderHistory" class="btn btn-primary btn-pill">
                    Order History
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h2>Open Orders</h2>
                    </div>
                    <div class="card-body">
                        <table id="customerTable" class="table table-hover table-striped table-product"
                            style="width:100%">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                    <tr class="clickable-row" data-href="/admin/viewOrder/{{_id}}"
                                        style="color:#212529; font-weight: 500;">
                                        <td class="text-capitalize">{{customer.companyName}}</td>
                                        <td class="text-capitalize">{{customer.firstName}} {{customer.lastName}}</td>
                                        <td>{{formatDate createdAt}}</td>

                                        <td class="text-capitalize">{{status}}</td>
                                    </tr>
                                    <div class="modal fade" id="completeModal-{{_id}}" tabindex="-1" role="dialog"
                                        aria-labelledby="completeModalLabel-{{_id}}" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="completeModalLabel-{{_id}}">Confirm
                                                        Completion</h5>
                                                    <button type="button" class="close text-white" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to mark this order as completed? This will
                                                    hide the order from your dashboard.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary btn-pill"
                                                        data-dismiss="modal">Cancel</button>
                                                    <a href="#" class="btn btn-danger btn-pill">Confirm</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>